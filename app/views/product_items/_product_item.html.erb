<%= turbo_frame_tag product_item do %>
  <div class="mb-3">
    <div class="row">
      <div class="col">
        <%= simple_form_for([product_item.active? ? :complete : :uncomplete, product_item.list, product_item]) do |f| %>
          <%= f.input :status, as: :boolean, label: false, input_html: { checked: product_item.completed?, onchange: "this.form.request.();" } %>
        <% end %>

      </div>
      <div class="col">
        <p><%= product_item.name %></p>
      </div>

      <div class="col">
        <div class="d-grid gap-2 d-md-block">
          <%= link_to "M",
            [:edit, product_item.list, product_item],
            class: "btn btn-success" %>

          <%= button_to "D",
            [product_item.list, product_item],
            method: :delete,
            class: 'btn btn-danger',
            form_class: 'd-inline-flex' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
