<%= turbo_stream_from current_user, "product_lists" %>

<div class="text-center">
  <h1>Listes</h1>
  <%= link_to "Nouvelle liste",
              new_product_list_path,
              class: 'btn btn-primary',
              data: { turbo_frame: dom_id(ProductList.new) } %>
</div>

<br>
<br>
<%= turbo_frame_tag ProductList.new %>
<br>
<%= turbo_frame_tag "product_lists" do %>
  <% @product_lists.each do |product_list| %>
    <%= render product_list %>
  <% end %>
<% end %>
